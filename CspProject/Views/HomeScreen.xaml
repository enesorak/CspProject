<UserControl x:Class="CspProject.Views.HomeScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="300">
    <UserControl.Resources>
        <Style x:Key="MenuIconStyle" TargetType="dx:DXImage">
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Background="#F5F5F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Navigation Menu -->
        <Border Grid.Column="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <Image Source="/Images/csp_logo.png" Height="40" Margin="15,0,15,0" HorizontalAlignment="Left"/>
                    <TextBlock FontSize="24" FontWeight="Bold"  Text="CSP" VerticalAlignment="Center"/>
                </StackPanel>
              
                <Button Style="{StaticResource MenuButtonStyle}" Tag="Home">
                    <StackPanel Orientation="Horizontal">
                        <dx:DXImage Source="{dx:FontIconSource 59407}" Style="{StaticResource MenuIconStyle}"/>
                        <TextBlock Text="Home" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource MenuButtonStyle}" Tag="MyDocuments">
                    <StackPanel Orientation="Horizontal">
                        <dx:DXImage Source="{dx:FontIconSource 59897}" Style="{StaticResource MenuIconStyle}"/>
                        <TextBlock Text="My Documents" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource MenuButtonStyle}" Tag="Templates">
                    <StackPanel Orientation="Horizontal">
                        <dx:DXImage Source="{dx:FontIconSource 62853}" Style="{StaticResource MenuIconStyle}"/>
                        <TextBlock Text="Templates" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource MenuButtonStyle}" Tag="ChangeLog">
                    <StackPanel Orientation="Horizontal">
                        <dx:DXImage Source="{dx:FontIconSource 60613}" Style="{StaticResource MenuIconStyle}"/>
                        <TextBlock Text="Change Log" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource MenuButtonStyle}" Tag="Approvals">
                    <StackPanel Orientation="Horizontal">
                        <dx:DXImage Source="{dx:FontIconSource 59198}" Style="{StaticResource MenuIconStyle}"/>
                        <TextBlock Text="Approvals" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource MenuButtonStyle}" Tag="Settings">
                    <StackPanel Orientation="Horizontal">
                        <dx:DXImage Source="{dx:FontIconSource 59155}" Style="{StaticResource MenuIconStyle}"/>
                        <TextBlock Text="Settings" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <!-- Other menu buttons can be added here -->
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <DockPanel Grid.Column="1" Margin="30">
            <TextBlock DockPanel.Dock="Top" Text="Home" FontSize="28" FontWeight="Light" Margin="0,0,0,20"/>
            
            <!-- Top Bar with Create Button and Filters -->
            <DockPanel DockPanel.Dock="Top" VerticalAlignment="Center">
                <Button x:Name="CreateNewButton" Click="CreateNewButton_Click" HorizontalAlignment="Left" Padding="15,10" FontWeight="Bold" Background="#007ACC" Foreground="White" BorderThickness="0" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <dx:DXImage Source="{dx:FontIconSource 59152, ColorName=White}" Width="16" Height="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Create New Document" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <dxe:ComboBoxEdit x:Name="DocumentTypeComboBox" NullText="Document Type" Width="150" Margin="0,0,10,0" IsEnabled="False">
                        <!-- This is disabled for now as it requires a database change -->
                    </dxe:ComboBoxEdit>
                    <dxe:ComboBoxEdit x:Name="StatusComboBox" NullText="Status" Width="120" EditValueChanged="Filter_Changed">
                        <dxe:ComboBoxEditItem Content="All"/>
                        <dxe:ComboBoxEditItem Content="Draft"/>
                        <dxe:ComboBoxEditItem Content="Under Review"/>
                        <dxe:ComboBoxEditItem Content="Approved"/>
                    </dxe:ComboBoxEdit>
                </StackPanel>
            </DockPanel>
            
            <!-- Second Bar with Title and Search -->
            <DockPanel DockPanel.Dock="Top" Margin="0,30,0,10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Recent Documents" FontSize="20" FontWeight="Normal" VerticalAlignment="Center"/>
                    <TextBlock Text="(showing last 10)" FontSize="12" Foreground="Gray" VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>
                <dxe:ButtonEdit x:Name="SearchBox" AllowDefaultButton="False" Width="250" HorizontalAlignment="Right" NullText="Search..." EditValueChanged="Filter_Changed">
                    <dxe:ButtonInfo GlyphKind="Search" IsLeft="True"/>
                </dxe:ButtonEdit>
            </DockPanel>
            
            <!-- Grid for Documents and Loading Indicator Overlay -->
            <Grid>
                <dxg:GridControl x:Name="RecentDocumentsGrid" AutoGenerateColumns="None" MaxHeight="400" MouseDoubleClick="RecentDocumentsGrid_MouseDoubleClick">
                    <dxg:GridControl.Columns>
                        <dxg:GridColumn FieldName="DocumentName" Header="Document Name" Width="150"/>
                        <dxg:GridColumn FieldName="Status" Header="Status"  Width="75"/>
                        <dxg:GridColumn FieldName="ModifiedDate" Header="Last Modified"  Width="100">
                            <dxg:GridColumn.EditSettings>
                                <dxe:DateEditSettings DisplayFormat="g"/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn FieldName="Version" Header="Version" Width="auto"/>
                    </dxg:GridControl.Columns>
                    <dxg:GridControl.View>
                        <dxg:TableView ShowGroupPanel="False" NavigationStyle="Row"/>
                    </dxg:GridControl.View>
                </dxg:GridControl>
               
                <!-- YENİ: Yükleme Göstergesi -->
                <Border x:Name="LoadingIndicator" Background="#80FFFFFF" CornerRadius="5" Visibility="Collapsed">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <!-- FIX: Use StyleSettings for indeterminate progress bar -->
                        <dxe:ProgressBarEdit Width="200" Height="20">
                            <dxe:ProgressBarEdit.StyleSettings>
                                <dxe:ProgressBarMarqueeStyleSettings/>
                            </dxe:ProgressBarEdit.StyleSettings>
                        </dxe:ProgressBarEdit>
                        <TextBlock Text="Loading Documents..." Margin="0,10,0,0" FontWeight="SemiBold" FontSize="14"/>
                    </StackPanel>
                </Border>
            </Grid>
        </DockPanel>
    </Grid>
</UserControl>