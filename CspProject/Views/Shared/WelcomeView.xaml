<UserControl x:Class="CspProject.Views.Shared.WelcomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             >
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
        <TextBlock Text="Welcome to CSP" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        <TextBlock Text="This appears to be your first time running the application. Please enter your details to begin." TextWrapping="Wrap" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <Label Content="Your Full Name:"/>
        <TextBox x:Name="NameTextBox" Margin="0,0,0,10"/>

        <Label Content="Your Email Address:"/>
        <TextBox x:Name="EmailTextBox" Margin="0,0,0,20"/>

        <Button Content="Get Started" Click="GetStarted_Click" Padding="10,5"/>
    </StackPanel>
</UserControl>