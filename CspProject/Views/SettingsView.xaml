<UserControl x:Class="CspProject.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:local="clr-namespace:CspProject"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900">
    <DockPanel Margin="30">
        <TextBlock DockPanel.Dock="Top" Text="Settings" FontSize="28" FontWeight="Light" Margin="0,0,0,20" />

        <dx:DXTabControl>
            <dx:DXTabItem Header="General">
                <StackPanel Margin="20">
                    <TextBlock Text="General Application Settings" FontSize="20" FontWeight="Normal" Margin="0,0,0,10" />
                    <TextBlock
                        Text="Future settings for application behavior and startup options will be configured here."
                        Foreground="Gray" TextWrapping="Wrap" Margin="0,0,0,20" />
                    <dxe:CheckEdit Content="Automatically check for approvals on startup" IsChecked="True"
                                   IsEnabled="False" Margin="0,10,0,0" />
                    <dxe:CheckEdit Content="Show notification popups for new approvals" IsChecked="True"
                                   IsEnabled="False" Margin="0,10,0,0" />


                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <Button Content="Test Sentry" Click="TestSentry_Click" HorizontalAlignment="Left"
                                Padding="15,8" />
                        <Button Content="Test Error" Click="TestError_Click" HorizontalAlignment="Left" Padding="15,8"
                                Margin="10,0,0,0" />
                    </StackPanel>
                </StackPanel>
            </dx:DXTabItem>

            <dx:DXTabItem Header="Email Settings">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="20">
                        <TextBlock Text="Email Configuration" FontSize="20" FontWeight="Normal" Margin="0,0,0,10" />
                        <TextBlock
                            Text="Configure the email account for sending and receiving approval requests. Use a 'Google App Password' or equivalent for security."
                            Foreground="Gray" TextWrapping="Wrap" Margin="0,0,0,20" />

                        <Grid HorizontalAlignment="Left" Width="450">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" /><RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" /><RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" /><RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" /><RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Outgoing Mail (SMTP)"
                                       FontWeight="Bold" Margin="0,0,0,5" />
                            <Label Grid.Row="1" Grid.Column="0" Content="SMTP Server:" VerticalAlignment="Center"
                                   Margin="0,0,10,5" />
                            <dxe:TextEdit Grid.Row="1" Grid.Column="1" x:Name="SmtpServerTextEdit" Margin="0,0,0,5"
                                          ToolTip="Example: smtp.gmail.com" />

                            <Label Grid.Row="2" Grid.Column="0" Content="SMTP Port:" VerticalAlignment="Center"
                                   Margin="0,0,10,5" />
                            <dxe:TextEdit Grid.Row="2" Grid.Column="1" x:Name="SmtpPortTextEdit" Margin="0,0,0,5"
                                          ToolTip="Example: 465" />

                            <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Text="Incoming Mail (IMAP)"
                                       FontWeight="Bold" Margin="0,10,0,5" />
                            <Label Grid.Row="4" Grid.Column="0" Content="IMAP Server:" VerticalAlignment="Center"
                                   Margin="0,0,10,5" />
                            <dxe:TextEdit Grid.Row="4" Grid.Column="1" x:Name="ImapServerTextEdit" Margin="0,0,0,5"
                                          ToolTip="Example: imap.gmail.com" />

                            <Label Grid.Row="5" Grid.Column="0" Content="IMAP Port:" VerticalAlignment="Center"
                                   Margin="0,0,10,5" />
                            <dxe:TextEdit Grid.Row="5" Grid.Column="1" x:Name="ImapPortTextEdit" Margin="0,0,0,5"
                                          ToolTip="Example: 993" />

                            <TextBlock Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="Credentials &amp; Options" FontWeight="Bold" Margin="0,10,0,5" />
                            <Label Grid.Row="7" Grid.Column="0" Content="Your Full Name:" VerticalAlignment="Center"
                                   Margin="0,0,10,5" />
                            <dxe:TextEdit Grid.Row="7" Grid.Column="1" x:Name="SenderNameTextEdit" Margin="0,0,0,5" />

                            <Label Grid.Row="8" Grid.Column="0" Content="Email Address:" VerticalAlignment="Center"
                                   Margin="0,0,10,5" />
                            <dxe:TextEdit Grid.Row="8" Grid.Column="1" x:Name="SenderEmailTextEdit" Margin="0,0,0,5" />

                            <Label Grid.Row="9" Grid.Column="0" Content="App Password:" VerticalAlignment="Center"
                                   Margin="0,0,10,5" />
                            <dxe:PasswordBoxEdit Grid.Row="9" Grid.Column="1" x:Name="PasswordBoxEdit" Margin="0,0,0,5" />

                            <Label Grid.Row="10" Grid.Column="0" Content="Enable SSL/TLS:" VerticalAlignment="Center"
                                   Margin="0,0,10,5" />
                            <dxe:CheckEdit Grid.Row="10" Grid.Column="1" x:Name="EnableSslCheckEdit" IsChecked="True"
                                           VerticalAlignment="Center" />

                            <StackPanel Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal"
                                        Margin="0,20,0,0">
                                <Button Content="Save Email Settings" Click="SaveEmailSettings_Click"
                                        HorizontalAlignment="Left" Padding="15,8" />
                                <Button Content="Test Connection" Click="TestConnection_Click"
                                        HorizontalAlignment="Left" Padding="15,8" Margin="10,0,0,0" />
                            </StackPanel>
                            <TextBlock Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="2" x:Name="TestResultLabel"
                                       Margin="0,10,0,0" FontWeight="SemiBold" TextWrapping="Wrap" />
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </dx:DXTabItem>
<dx:DXTabItem Header="Workflow">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="Approval Workflow Settings" FontSize="20" FontWeight="Normal" Margin="0,0,0,20"/>
            
            <!-- Auto-check for approvals -->
            <dxe:CheckEdit x:Name="AutoCheckApprovalsEdit" Content="Automatically check for approvals on startup" 
                           IsChecked="True" Margin="0,10,0,5"/>
            <StackPanel Orientation="Horizontal" Margin="20,0,0,15">
                <Label Content="Check interval (minutes):"/>
                <dxe:SpinEdit x:Name="CheckIntervalEdit" Value="5" MinValue="1" MaxValue="60" 
                              Width="80" IsEnabled="{Binding ElementName=AutoCheckApprovalsEdit, Path=IsChecked}"/>
            </StackPanel>
            
            <!-- Email notifications -->
            <TextBlock Text="Email Notifications" FontWeight="SemiBold" Margin="0,20,0,10"/>
            <dxe:CheckEdit Content="Send notification when document is submitted for review" IsChecked="True" Margin="0,5,0,0"/>
            <dxe:CheckEdit Content="Send notification when document is approved" IsChecked="True" Margin="0,5,0,0"/>
            <dxe:CheckEdit Content="Send notification when document is rejected" IsChecked="True" Margin="0,5,0,0"/>
            <dxe:CheckEdit Content="Send reminder emails for pending approvals" IsChecked="False" Margin="0,5,0,0"/>
            
            <!-- Approval Token Expiry -->
            <Label Content="Approval Token Expiry (days):" Margin="0,15,0,0"/>
            <dxe:SpinEdit x:Name="TokenExpiryEdit" Value="7" MinValue="1" MaxValue="30" 
                          Width="100" HorizontalAlignment="Left" Margin="0,0,0,5"/>
            <TextBlock Text="Approval links will expire after this many days" Foreground="Gray" FontSize="11" Margin="0,0,0,15"/>
            
            <!-- Require comment on rejection -->
            <dxe:CheckEdit Content="Require comment when rejecting documents" IsChecked="True" Margin="0,10,0,0"/>
            <dxe:CheckEdit Content="Require comment when making major changes" IsChecked="False" Margin="0,5,0,0"/>
            
            <!-- Multiple approvers -->
            <TextBlock Text="Multi-level Approval (Coming Soon)" FontWeight="SemiBold" Margin="0,20,0,10"/>
            <dxe:CheckEdit Content="Enable multi-level approval workflow" IsChecked="False" IsEnabled="False" Margin="0,5,0,0"/>
            <TextBlock Text="Requires all designated approvers to approve before finalizing" 
                       Foreground="Gray" FontSize="11" Margin="20,5,0,0"/>
        </StackPanel>
    </ScrollViewer>
</dx:DXTabItem>
            <dx:DXTabItem Header="About">
                <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/Images/csp_logo-bg-none-270.png" Height="120" Margin="0,0,0,20" />

                    <TextBlock Text="Compliant Spreadsheet Platform" FontSize="24" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,0,0,10" />

                    <TextBlock x:Name="VersionTextBlock"
                               Text="{Binding Source={x:Static local:App.AppVersion}, StringFormat='Version {0}'}"
                               FontSize="14" Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,30" />

                    <TextBlock Text="Developed by TOMCO" FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,5" />
                    <TextBlock Text="Copyright Â© 2025 TOMCO. All rights reserved." FontSize="12" Foreground="Gray"
                               HorizontalAlignment="Center" Margin="0,0,0,30" />

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Check for Updates" Padding="10,5" Margin="0,0,10,0" />
                        <Button Content="View License" Padding="10,5" Margin="0,0,10,0" />
                        <Button Content="Documentation" Padding="10,5" />
                    </StackPanel>

                    <Border Background="#FFF0F8FF" BorderBrush="#FF007ACC" BorderThickness="1"
                            CornerRadius="4" Padding="15" Margin="0,30,0,0" MaxWidth="500">
                        <StackPanel>
                            <TextBlock Text="System Information" FontWeight="SemiBold" Margin="0,0,0,10" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Operating System:" Margin="0,0,10,5" />
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="OSTextBlock" Text="Windows 11"
                                           Margin="0,0,0,5" />

                                <TextBlock Grid.Row="1" Grid.Column="0" Text=".NET Runtime:" Margin="0,0,10,5" />
                                <TextBlock Grid.Row="1" Grid.Column="1" Text=".NET 9.0" Margin="0,0,0,5" />

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="DevExpress:" Margin="0,0,10,5" />
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="v25.1.3" Margin="0,0,0,5" />

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Database:" Margin="0,0,10,5" />
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="DbSizeTextBlock" Text="2.4 MB"
                                           Margin="0,0,0,5" />

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Total Documents:" Margin="0,0,10,0" />
                                <TextBlock Grid.Row="4" Grid.Column="1" x:Name="DocCountTextBlock" Text="0" />
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </dx:DXTabItem>
        </dx:DXTabControl>
    </DockPanel>
</UserControl>