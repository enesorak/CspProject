<Window x:Class="CspProject.Views.TemplateNameInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save as Template" 
        Height="200" Width="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBlock Text="Enter Template Name" 
                   FontSize="16" FontWeight="SemiBold" 
                   Margin="0,0,0,10"/>
        
        <TextBlock Text="This name will appear in the Templates list." 
                   Foreground="Gray" 
                   Margin="0,0,0,20"/>
        
        <Label Content="Template Name:"/>
        <TextBox x:Name="TemplateNameTextBox" 
                 Margin="0,0,0,20"
                 Text="My Custom Template"/>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" 
                    Click="SaveButton_Click" 
                    Width="80" 
                    IsDefault="True" 
                    Padding="10,5"
                    Margin="0,0,10,0"/>
            <Button Content="Cancel" 
                    Width="80" 
                    IsCancel="True" 
                    Padding="10,5"/>
        </StackPanel>
    </StackPanel>
</Window>