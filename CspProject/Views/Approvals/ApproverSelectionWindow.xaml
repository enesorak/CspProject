<Window x:Class="CspProject.Views.Approvals.ApproverSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        Title="Select Approver" Height="600" Width="400" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="15">
        <TextBlock Text="Select an Existing Approver" FontSize="16" FontWeight="SemiBold"/>
        <ListBox x:Name="UsersListBox" DisplayMemberPath="Name" Margin="0,5,0,10" Height="150"/>
        <Button Content="Select This User" Click="SelectButton_Click" Padding="10,5"/>

        <Separator Margin="0,20,0,20"/>

        <TextBlock Text="Or Add a New Approver" FontSize="16" FontWeight="SemiBold"/>
        <Label Content="New Approver Name:"/>
        <TextBox x:Name="NewNameTextBox" Margin="0,0,0,5"/>
        <Label Content="New Approver Email:"/>
        <TextBox x:Name="NewEmailTextBox" Margin="0,0,0,10"/>
        <Button Content="Add and Select" Click="AddAndSelectButton_Click" Padding="10,5"/>

        <Button Content="Cancel" Click="CancelButton_Click" Padding="10,5" Margin="0,20,0,0" HorizontalAlignment="Right"/>
    </StackPanel>
</Window>