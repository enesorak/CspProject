<UserControl x:Class="CspProject.Views.LoadingSplashScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="360">
    <Border HorizontalAlignment="Center" VerticalAlignment="Center" Background="White" CornerRadius="5" BorderBrush="#CCCCCC" BorderThickness="1">
        <StackPanel Orientation="Vertical" Margin="25">
            <dxe:ProgressBarEdit  Width="240" Height="32">
                <dxe:ProgressBarEdit.StyleSettings>
                    <dxe:ProgressBarMarqueeStyleSettings />
                </dxe:ProgressBarEdit.StyleSettings>
            </dxe:ProgressBarEdit>
            <TextBlock x:Name="LoadingMessageTextBlock" Text="Processing, please wait..." VerticalAlignment="Center" Margin="0,0,0,0" FontSize="14" Foreground="#333"/>
        </StackPanel>
    </Border>
    
     
</UserControl>
